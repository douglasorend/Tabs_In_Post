<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">

<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
	<id>Dougiefresh:tabsinposts</id>
	<name>Tabs In Posts</name>
	<type>modification</type>
	<version>1.0</version>

	<install for="2.0 - 2.0.99, 2.1 Beta 3">
		<readme parsebbc="true">readme.txt</readme>
		<code>add_remove_hooks.php</code>
		<modification>install_20x.xml</modification>
		<require-file name="Subs-TabsInPost.php" destination="$sourcedir" />
		<require-file name="tabsinposts.css" destination="$themedir/css" />
		<require-file name="tabsinposts.js" destination="$themedir/scripts" />
	</install>
	<uninstall for="2.0 - 2.0.99, 2.1 Beta 3">
		<code>add_remove_hooks.php</code>
		<modification reverse="true">install_20x.xml</modification>
		<remove-file name="$sourcedir/Subs-TabsInPost.php" />
		<remove-file name="$themedir/css/tabsinposts.css" />
		<remove-file name="$themedir/scripts/tabsinposts.js" />
	</uninstall>
</package-info>